{
  "compilerOptions": {
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "rootDir": "./",
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {"@/*": ["./src/*"]}
  },
  "exclude": [
    ".babelconfig.js",
    "webpack.config.js",
    "./scripts/",
    "inject/",
    "build/"
  ]
}
